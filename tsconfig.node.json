{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "src/server/**/*",
    "src/shared/**/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "composite": true,
    "lib": ["ESNext.Promise", "ESNext"],
    "noUncheckedIndexedAccess": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
